<div class="container">
    <div class="row">
        <div class="d-flex aligin-items-center">
            <h1 class="p-3 md-10 bg-secondary text-white">タイムライン</h1>
        </div>
    </div>
    <div class="row col-sm-8 offset-sm-2">
        <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
        <div class="form-group">
            <label for="keyword">キーワード検索</label>
            <%= f.text_field :keyword, class: "form-control keyword" %>
        </div>
        <div class="form-group">
            <%= f.submit "検索", class: "btn btn-secondary" %>
        </div>
        <% end %>
        
        <table class="table">
            <thead class="thead-light">
                <th>アカウント名</th>
                <th>カテゴリ名</th>
                <th>学習開始時刻</th>
                <th>学習終了時刻</th>
                <th></th>
            </thead>
        </table>
        <tbody>
            <% @posts.each do |post| %>
            <tr>
                <td><%= post.user.account_name %></td>
                <td><%= post.category.category_name %></td>
                <td><%= post.start_time %></td>
                <td><%= post.finish_time %></td>
                <td><%= link_to '詳しく見る', post_path(post.id), class: "btn btn-secondary" %></td>
            </tr>
            <% end %>
        </tbody>
    </div>
</div>