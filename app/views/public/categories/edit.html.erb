<div class="container">
    <div class="row">
        <div class="d-flex aligin-items-center">
            <h1 class="p-3 md-10 bg-secondary text-center">カテゴリー編集</h1>
        </div>
    </div>
    
    <%= form_with model: @category, url: category_path(@category), method: :patch do |f| %>
    <div class="form-group">
        <label for="category_name">カテゴリー名</label>
        <%= f.text_field :category_name, class: "form-control category_name" %>
    </div>
    <div class="form-group">
        <%= f.submit '更新', class: "btn btn-success" %>
    </div>
    <% end %>
</div>