<div class="container">
    <div class="row">
        <div class="d-flex aligin-items-center">
            <h1 class="p-3 md-10 offset-sm-2">
                <%= @user.account_name %> の情報編集
            </h1>
        </div>
    </div>
    <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
    <div class="form-group">
        <label for="last_name">姓</label>
        <%= f.text_field :last_name, class: "form-control last_name" %>
    </div>
    <div class="form-group">
        <label for="first_name">名</label>
        <%= f.text_field :first_name, class: "form-control first_name" %>
    </div>
    <div class="form-group">
        <label for="last_name_kana">姓カナ</label>
        <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
    </div>
    <div class="form-group">
        <label for="first_name_kana">名カナ</label>
        <%= f.text_field :first_name_kana, class: "form-control first_name_kana" %>
    </div>
    <div class="form-group">
        <label for="email">メールアドレス</label>
        <%= f.text_field :email, class: "form-control email" %>
    </div>
    <div class="form-group">
        <label for="account_name">アカウント名</label>
        <%= f.text_field :account_name, class: "form-control account_name" %>
    </div>
    <div class="form-group">
        <label for="introduction">自己紹介</label>
        <%= f.text_field :introduction, class: "form-control introduction" %>
    </div>
    <div class="form-group">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
    <% end %>
    <div>
        <%= link_to '戻る', user_path, class: "glyphicon glyphicon-home btn btn-info" %>
        <%= link_to '退会する', unsubscribe_users_path, class: "glyphicon glyphicon-tint btn btn-danger" %>
    </div>
</div>