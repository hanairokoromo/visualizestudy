<div class="container">
    <div class="row">
        <div class="d-flex aligin-items-center">
            <h1 class="p-3 md-10 bg-secondary text-white">
                <%= @user.account_name %> のマイページ
            </h1>
        </div>
    </div>
    <div class="row col-sm-8 offset-sm-2">
        <%= form_with url: search_users_path, local: true, method: :get do |f| %>
        <div class="form-group">
            <label for="keyword">ユーザー検索</label>
            <%= f.text_field :keyword %>
        </div>
        
        <%= link_to "いいねした投稿", favorite_user_path(@user) %>
        
        <div class="form-group">
            <%= f.submit '検索', class: "btn btn-secondary" %>
        </div>
        <% end %>
        
        <div>
            <%= image_tag @user.get_profile_image, height: "100" %>
        </div>
        
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th>アカウント名</th>
                    <th>フォロー</th>
                    <th>フォロワー</th>
                    <th>自己紹介</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= @user.account_name %></td>
                    <% if current_user.following?(@user) %>
                    <td><%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %></td>
                    <% else %>
                    <td><%= link_to "フォローする", user_relationships_path(@user.id), method: :post %></td>
                    <% end %>
                    <td></td>
                    <td><%= @user.introduction %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

