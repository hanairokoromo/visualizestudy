<div class="container">
  <div class="row">
    <div class="d-flex aligin-items-center">
      <h1 class="p-3 md-10 bg-default text-dark">フォロー</h1>
    </div>
  </div>
  <div class="row col-sm-10 offset-sm-2">
  <% if users.exists? %>
    <% users.each do |user| %>
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th></th>
          <th>アカウント名</th>
          <th>自己紹介</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_image, height: "80", class: "mt-3 rounded-circle"; %>
            <% end %>
          </td>
          <td><%= user.account_name %></td>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  <% else %>
    <div>ユーザーはいません</div>
  <% end %>
  </div>
</div>