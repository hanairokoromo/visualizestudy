<div class="container">
    <div class="row">
        <div class="d-flex aligin-items-center">
            <h1 class="p-3 md-10 bg-secondary text-white">最新の投稿</h1>
        </div>
    </div>
    <div class="card-list-container py-5">
        <% @posts.each do |post| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
            <div class="card-body">
                <div class="row">
                    <div class="col-2">
                        <% image_tag post.user.get_profile_image, height: "100", class: "mt-3 rounded-circle"; %>
                    </div>
                    <div class="col-10">
                        <p class="card-title">
                            <%= link_to(post_path(post.id), class: "text-dark") do %>
                            
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>