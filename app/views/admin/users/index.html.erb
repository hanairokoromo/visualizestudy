<div class="container">
  <div class="row">
    <div class="d-flex aligin-items-center">
      <h1 class="p-3 md-10 bg-secondary text-white">ユーザー一覧</h1>
    </div>
  </div>
  <div class="row col-sm-10 offset-sm-2">
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th></th>
          <th>氏名</th>
          <th>氏名カナ</th>
          <th>アカウント名</th>
          <th>メールアドレス</th>
          <th>ユーザ―ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, height: "80", class: "mt-3 rounded-circle"; %></td>
          <td>
            <%= link_to admin_user_path(user) do %>
              <%= user.last_name %> <%= user.first_name %>
            <% end %>
          </td>
          <td><%= user.last_name_kana %> <%= user.first_name_kana %></td>
          <td><%= user.account_name %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_deleted == true %>
             <p><i class="fas fa-bullseye red"></i>退会済み</p>
            <% else %>
              <p><i class="fas fa-bullseye red"></i>有効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>